<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chooseAddress"
    android:background="#7CF1EDED">
    <LinearLayout
        android:background="#EBFFFFFF"
        android:elevation="8dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backpress"
            android:src="@drawable/ic_baseline_keyboard_backspace_black"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#EBFFFFFF"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_gravity="center"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#4CAF50"/>
                <TextView
                    android:textColor="#4CAF50"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bag"/>
                <View
                    android:layout_gravity="center"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#4CAF50"/>
                <TextView
                    android:textColor="#4CAF50"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"/>
                <View
                    android:layout_gravity="center"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#83000000"/>
                <TextView
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment"/>
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="10dp"
                android:background="#EBFFFFFF"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/addlayout"
                    android:padding="10dp"
                    android:background="#EBFFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:layout_gravity="center"
                                android:id="@+id/homeType"
                                android:padding="10dp"
                                android:drawablePadding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:text="Home"
                                android:textSize="12sp"
                                android:background="@drawable/edittext_bg"
                                android:drawableLeft="@drawable/ic_baseline_home_24"/>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/add"
                        android:fontFamily="@font/arsenal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:fontFamily="@font/arsenal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile :"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/phone"
                            android:fontFamily="@font/arsenal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9**********"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/changeBtn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHANGE OR ADD ADDRESS"
                    android:background="@drawable/button3"/>
            </LinearLayout>


            <TextView
                android:paddingLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELIVERY ESTIMATES"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:background="#EBFFFFFF"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recyclerView"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/orderBtn"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="#FFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:paddingRight="10dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#EEE91E63"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:textColor="#FFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONINUE"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>