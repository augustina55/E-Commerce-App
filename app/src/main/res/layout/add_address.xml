<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAddress">
    <LinearLayout
        android:elevation="8dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backpress"
            android:src="@drawable/ic_baseline_keyboard_backspace_black"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add delivery address"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/editName"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="textPersonName"
                android:hint="Full Name (Required)*"
                android:background="@drawable/edittext_bg"/>
            <EditText
                android:id="@+id/editPhone"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="Phone Number (Required)*"
                android:background="@drawable/edittext_bg"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/editPin"
                    android:padding="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="Pincode (Required)*"
                    android:inputType="number"
                    android:background="@drawable/edittext_bg"/>
                <Button
                    android:id="@+id/locationBtn"
                    android:padding="5dp"
                    android:drawablePadding="10dp"
                    android:text="Use my location"
                    android:layout_marginLeft="30dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:drawableLeft="@drawable/ic_baseline_my_location_24"
                    android:textColor="@color/whiteTextColor"
                    android:background="@color/blue"
                    android:singleLine="true"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/editCity"
                    android:inputType="text"
                    android:padding="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="City (Required)*"
                    android:background="@drawable/edittext_bg"/>
                <EditText
                    android:id="@+id/editState"
                    android:inputType="text"
                    android:layout_marginLeft="10dp"
                    android:padding="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="State (Required)*"
                    android:background="@drawable/edittext_bg"/>
            </LinearLayout>
            <EditText
                android:id="@+id/editAdd1"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="textPersonName"
                android:hint="House No, Building name (Required)*"
                android:background="@drawable/edittext_bg"/>
            <EditText
                android:id="@+id/editAdd2"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="textPersonName"
                android:hint="Road Name, Area, Colony (Required)*"
                android:background="@drawable/edittext_bg"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of address"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/homeType"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:background="@drawable/button1"
                    android:drawableLeft="@drawable/ic_baseline_home_24"/>
                <Button
                    android:id="@+id/workType"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work"
                    android:drawableLeft="@drawable/ic_baseline_work_24"/>
            </LinearLayout>
            <Button
                android:id="@+id/saveBTN"
                android:textColor="@color/whiteTextColor"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Address"
                android:background="#EBF44336"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>